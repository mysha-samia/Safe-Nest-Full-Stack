<% layout("/layouts/boilerPlate") %>
<div class="container-fluid">
  <div class="row mt-5">
    <div
      class="signUp-layout col-lg-8 col-md-8 col-sm-10 col-12 justify-content-center"
    >
      <div class="col-12 signup-form">
        <h2 class="mt-3" style="font-weight: 600">Sign In to Safe Nest</h2>
        <form
          action="/signup"
          method="POST"
          class="needs-validation"
          novalidate
        >
          <div class="mb-3 mt-5">
            <div style="display: flex">
              <i
                class="fa-solid fa-user"
                style="font-size: 1.3em; margin-top: 13px; margin-right: 2px"
              ></i>
              <label for="username" class="form-label-register user-label"
                >User Name:</label
              >
            </div>
            <input
              name="username"
              id="username"
              class="form-control form-control-Forms "
              required
            />
          </div>
          <div class="mb-3">
            <div style="display: flex">
              <i
                class="fa fa-envelope"
                aria-hidden="true"
                style="font-size: 1.3em; margin-top: 13px; margin-right: 2px"
              ></i>
              <label for="email" class="form-label-register user-label">Email:</label>
            </div>
            <input name="email" id="email" class="form-control form-control-Forms " required />
          </div>
          <div class="mb-3">
            <div style="display: flex">
              <i
                class="fa-solid fa-lock"
                style="font-size: 1.3em; margin-top: 13px; margin-right: 2px"
              ></i>
              <label for="password" class="form-label-register user-label"
                >Password:</label
              >
            </div>
            <input
              name="password"
              id="password"
              class="form-control form-control-Forms "
              required
            />
          </div>
          <button
            class="btn btn-primary show-btn mt-4 mb-4"
            style="background-color: #fe424d !important"
          >
            Sign Up
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
