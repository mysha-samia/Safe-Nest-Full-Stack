<% layout("/layouts/boilerPlate") %>


    <body>
        <div class="row">
            <div class="col-10 lg-offset-2 md-offset-1 sm-offset-0">
                <h3 class="mt-3 lg-offset-2 md-offset-1 sm-offset-1">Edit your Listings</h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3 mt-4">
                        <label for="title" class="form-label label-weight">Title</label>
                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label  label-weight">Description</label>
                        <textarea name="listing[description]" type="text"
                            class="form-control" required><%= listing.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label  label-weight">Image Preview</label> 
                        <img src="<%=  originalImgUrl %>" class="form-control" style="width:400px ; height:350px; object-fit:cover;">

                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label  label-weight">Upload Image</label> 
                        <input name="listing[image]"  type="file" class="form-control" />

                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label  label-weight">Price</label>
                            <input name="listing[price]" type="number" value="<%= listing.price %>"
                                class="form-control" required />
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label  label-weight">Location</label>
                            <input name="listing[location]" type="text" value="<%= listing.location %>"
                                class="form-control" required/>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label  label-weight ">Country</label>
                        <input name="listing[country]" type="text" value="<%= listing.country %>"
                            class="form-control" required />
                    </div>
                    <button class="btn btn-success  mb-3 edit-btn">Save</button>
                </form>
            </div>
        </div>

    </body>

    </html>