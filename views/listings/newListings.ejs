<% layout("/layouts/boilerPlate") %>

  <body>
    <div class="container-fluid justify-content-center">
    <div class="row">
      <div class="col-lg-8 offset-lg-3 col-md-10 offset-md-2 col-sm-12 offset-sm-1">
        <h3 class="mt-3 offset-lg-3 offset-md-2  offset-sm-1">Create New Listing</h3>

        <form method="POST" action="/listings" novalidate class="needs-validation"  id="reviewForm" enctype="multipart/form-data">
          <div class="mb-3 mt-4">
            <label for="title" class="form-label label-weight">Title</label>
            <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required />
            <div class="valid-feedback">Title looks good!!</div>
            <div class="invalid-feedback">Please enter a valid title</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label  label-weight">Description</label>
            <textarea 
            id="comment" 
            name="listing[description]" 
            placeholder="Enter Description" 
            type="text" 
            class="form-control "
             required >
           </textarea>
            <div class="invalid-feedback">Please enter a short description</div>
          </div>
          <div id="error-message" class="text-danger mt-2" style="display: none;">
            Please write a something meaningful!
        </div>
          <div class="mb-3">
            <label for="image" class="form-label  label-weight">Upload Image</label>
            <input name="listing[image]"  type="file" class="form-control" required/>
          </div>
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label  label-weight">Price</label>
              <input name="listing[price]" placeholder="Enter Price" type="number" class="form-control" required />
              <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="mb-3 col-md-8">
              <label for="location" class="form-label  label-weight">Location</label>
              <input name="listing[location]" placeholder="Enter Your Loaction" type="text" class="form-control"
                required />
              <div class="invalid-feedback">Please enter valid location</div>
            </div>
          </div>
          <div class="mb-2">
            <label for="country" class="form-label  label-weight ">Country</label>
            <input name="listing[country]" placeholder="Enter Your Country" type="text" class="form-control" required />
            <div class="invalid-feedback">Please enter valid country name</div>
          </div>
          <br />
          <button type="submit"  class="btn btn-dark add-btn mb-3">ADD</button>
        </form>
      </div>
    </div>
  </div>
  </body>

  </html>